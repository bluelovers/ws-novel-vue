{
  "extends": "@bluelovers/tsconfig/sourcemap/mapfile.json",
  "compilerOptions": {
    "strict": false,
    "jsx": "preserve",
//    "importHelpers": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "inlineSourceMap": false,
    "inlineSources": true,
    "removeComments": false,
    "skipLibCheck": true,
    "strictBindCallApply": true,
    "emitDecoratorMetadata": true,
    "baseUrl": ".",

//    "types": [
//      "webpack-env"
//    ],

    "paths": {
      "@/*": [
        "src/*"
      ]
    }

//  ,
//    "lib": [
//      "esnext",
//      "dom",
//      "dom.iterable",
//      "scripthost"
//    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx"
  ],
  "exclude": [
    "dist/**/*",
    "**/node_modules",
    "node_modules"
  ]
}
